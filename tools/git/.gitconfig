[core]
  autocrlf = false
  editor = 'subl' --wait
  eol = lf
  excludesfile = ~/.gitignore
  filemode = false
  pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
  gpgsign = true
[alias]
  branch-clean = !git branch | grep -v "master" | ifne xargs git branch -D && git remote prune origin
  branches = !legit branches
  check = !pre-commit run --all-files
  get = !ghq get $1 && cd $(ghq root)/$(ghq list | grep $1) && git yaw
  graph = log --graph --oneline
  publish = !legit publish
  switch = !legit switch
  sync = !legit sync
  tag-poetry = !poetry version | cut -d' ' -f2 | xargs -I {} git tag -a v{} -m 'Release {}' -s
  undo = !legit undo
  unpublish = !legit unpublish
  up = !gitup
  yaw = !fish -c gityaw
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[ghq]
  root = ~/.repos
[push]
  followTags = true
